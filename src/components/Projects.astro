            <div class="image">
              <!-- Add images with different sizes -->
              <img
                loading="lazy"
                class="image"
                src={projectImage}
                alt="Login page from Agenda application"
              />
            </div>
            <div class="technologies">
              <img
                loading="lazy"
                class="image"
                src={techIconUrl}
                alt={techIconAlt}
              />
