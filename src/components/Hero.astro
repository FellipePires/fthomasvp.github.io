---
import { Image } from "astro:assets";

import profileImage from "../assets/images/profile-fthomasvp-rounded-950w.png";
---

<section id="hero">
  <div
    class="mx-auto grid max-w-[70em] grid-cols-1 gap-6 px-8 md:gap-10 lg:grid-cols-2"
  >
    <!-- Copy -->
    <div
      class="animate__animated animate__fadeIn order-last flex w-full flex-col gap-y-2 text-center lg:order-first lg:justify-center lg:gap-y-4 lg:text-left"
    >
      <h1
        class="font-bold leading-tight tracking-wider sm:text-8xl lg:text-9xl"
      >
        Hi, I'm Fellipe
      </h1>
      <p class="font-gabarito text-xl tracking-widest lg:text-2xl">
        A front-end developer focusing on deliver great user experience.
      </p>
    </div>

    <!-- Image -->
    <div class="animate__animated animate__fadeIn order-first lg:order-last">
      <Image
        src={profileImage}
        alt="Fellipe is wearing a yellow t-shirt and smiling"
        loading="eager"
        class="h-60 max-w-full object-contain drop-shadow-basic sm:h-80 lg:h-[28rem]"
      />
    </div>
  </div>
</section>
