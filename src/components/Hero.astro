---
const profileImages = {
  small: "/images/profile-fthomasvp-circle-small.png",
  medium: "/images/profile-fthomasvp-circle-medium.png",
  large: "/images/profile-fthomasvp-circle-large.png",
};
---

<section id="hero" class="hero">
  <div class="introduction animate__animated animate__fadeInLeft">
    <h1>Hi, I'm Fellipe</h1>
    <p>A front-end developer with focus on deliver great user experience.</p>
  </div>
  <div class="image animate__animated animate__fadeInDown">
    <img
      width="100%"
      height="100%"
      src={profileImages.large}
      srcset={`${profileImages.small} 259w, ${profileImages.medium} 694w, ${profileImages.large} 950w`}
      sizes="(min-width: 1180px) 724px, (min-width: 1000px) calc(72.5vw - 117px), calc(100vw - 32px)"
      alt="Fellipe is wearing a yellow t-shirt and smiling"
    />
  </div>
</section>

<style lang="scss">
  @import "../styles/base.scss";

  .hero {
    display: flex;
    flex-wrap: wrap;
    flex-direction: column;
    gap: $space-4;

    max-width: $breakpoints-lg;

    margin-inline: auto;
    padding-inline: $space-4;
    padding-block: $space-48;

    .introduction {
      display: flex;
      flex: 1;
      flex-direction: column;

      padding-block-end: $space-8;

      text-align: center;

      h1 {
        font-size: $fontsizes-8xl;
        letter-spacing: $letterspacings-wider;
        line-height: $lineheights-shorter;
      }

      p {
        font-family: $fontfamily-bebas-neue;
        letter-spacing: $letterspacings-widest;
      }
    }

    .image {
      display: flex;
      justify-content: center;

      flex-grow: 1;

      img {
        max-width: 100%;
        object-fit: contain;

        filter: drop-shadow(4px 8px 8px hsl(0deg 0% 0% / 0.38));
      }
    }

    @media (max-width: $breakpoints-sm) {
      .introduction {
        h1 {
          font-size: $fontsizes-6xl;
        }
        p {
          font-size: $fontsizes-xl;
        }
      }

      .image {
        img {
          height: 15 * $space-4;
        }
      }
    }
    @media (min-width: $breakpoints-sm) {
      .image {
        img {
          height: 20 * $space-4;
        }
      }
    }
    @media (min-width: $breakpoints-lg) {
      flex-direction: row;

      .introduction {
        justify-content: center;

        text-align: left;

        padding-block-end: 0;

        h1 {
          font-size: $fontsizes-9xl;
        }
        p {
          font-size: $fontsizes-2xl;
        }
      }

      .image {
        img {
          height: 28 * $space-4;
        }
      }
    }
  }
</style>
