---
import "animate.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Poppins:ital,wght@0,400;0,700;1,400&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --colors-dark: #0f0f10;
    --colors-soft-white: #ddd;
    --colors-gunmetal: #2b2d42;
    --colors-aureolin: #e7e700;
    --colors-tiffany-blue: #84dccf;

    /* Breakpoints */
    /* Maybe I should add SASS to the project */
    /* https://bholmes.dev/blog/alternative-to-css-variable-media-queries/ */
    --breakpoints-sm: 30em; /* 480px */
    --breakpoints-md: 48em; /* 768px */
    --breakpoints-lg: 62em; /* 992px */
    --breakpoints-xl: 80em; /* 1280px */
    --breakpoints-2xl: 96em; /* 1536px */

    /* Border radius */
    --radii-none: 0;
    --radii-sm: 0.125rem;
    --radii-base: 0.25rem;
    --radii-md: 0.375rem;
    --radii-lg: 0.5rem;
    --radii-xl: 0.75rem;
    --radii-2xl: 1rem;
    --radii-3xl: 1.5rem;
    --radii-full: 9999px;

    /* Z-Indexes */
    --zIndices-hide: -1;
    --zIndices-auto: "auto";
    --zIndices-base: 0;
    --zIndices-docked: 10;
    --zIndices-dropdown: 1000;
    --zIndices-sticky: 1100;
    --zIndices-banner: 1200;
    --zIndices-overlay: 1300;
    --zIndices-modal: 1400;
    --zIndices-popover: 1500;
    --zIndices-skipLink: 1600;
    --zIndices-toast: 1700;
    --zIndices-tooltip: 1800;

    /* Font sizes */
    --fontsizes-xs: 0.75rem;
    --fontsizes-sm: 0.875rem;
    --fontsizes-md: 1rem;
    --fontsizes-lg: 1.125rem;
    --fontsizes-xl: 1.25rem;
    --fontsizes-2xl: 1.5rem;
    --fontsizes-3xl: 1.875rem;
    --fontsizes-4xl: 2.25rem;
    --fontsizes-5xl: 3rem;
    --fontsizes-6xl: 3.75rem;
    --fontsizes-7xl: 4.5rem;
    --fontsizes-8xl: 6rem;
    --fontsizes-9xl: 8rem;

    /* Font weights */
    --fontweights-hairline: 100;
    --fontweights-thin: 200;
    --fontweights-light: 300;
    --fontweights-normal: 400;
    --fontweights-medium: 500;
    --fontweights-semibold: 600;
    --fontweights-bold: 700;
    --fontweights-extrabold: 800;
    --fontweights-black: 900;

    /* Line heights */
    --lineheights-normal: "normal";
    --lineheights-none: 1;
    --lineheights-shorter: 1.25;
    --lineheights-short: 1.375;
    --lineheights-base: 1.5;
    --lineheights-tall: 1.625;
    --lineheights-taller: 2;
    --lineheights-3: 0.75rem;
    --lineheights-4: 1rem;
    --lineheights-5: 1.25rem;
    --lineheights-6: 1.5rem;
    --lineheights-7: 1.75rem;
    --lineheights-8: 2rem;
    --lineheights-9: 2.25rem;
    --lineheights-10: 2.5rem;

    /* Letter spacings */
    --letterspacings-tighter: -0.05em;
    --letterspacings-tight: -0.025em;
    --letterspacings-normal: 0;
    --letterspacings-wide: 0.025em;
    --letterspacings-wider: 0.05em;
    --letterspacings-widest: 0.1em;

    /* Fonts */
    --fontfamily--fallback: system-ui, -apple-system, BlinkMacSystemFont, Roboto,
      Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;

    scroll-behavior: smooth;

    margin: 0;
    padding: 0;

    word-wrap: break-word;
  }

  body {
    color: var(--colors-dark);
    font-family: "Poppins", sans-serif, var(--fontfamily--fallback);
    font-size: var(--fontsizes-md);
    line-height: var(--lineheights-base);

    background-color: #fff;
  }

  section {
    /* `block` represents "top" and "bottom" */
    padding-block: 6em;
  }

  h2 {
    margin-block: 0.8em;

    font-size: var(--fontsizes-3xl);
    font-family: "Bebas Neue", cursive, var(--fontfamily--fallback);
    letter-spacing: var(--letterspacings-wider);
  }

  @media (min-width: 30em) {
    body {
      font-size: var(--fontsizes-lg);
    }
  }

  .d-flex {
    display: flex;
  }
  .flex-1 {
    flex: 1;
  }
  .flex-direction-column {
    flex-direction: column;
  }
  .flex-direction-row {
    flex-direction: row;
  }
  .flex-wrap {
    flex-wrap: wrap;
  }
  .justify-center {
    justify-content: center;
  }
  .align-center {
    align-items: center;
  }

  .d-grid {
    display: grid;
  }

  .text-center {
    text-align: center;
  }

  .wrapper {
    max-width: 60em;

    margin-inline: auto;
    /* `inline` represents "left" and "right" */
    padding-inline: 1.25em;
  }

  /* Wave background effect */
  .wave-effect {
    position: relative;
  }
  .wave-effect::after {
    content: "";

    position: absolute;
    bottom: 0;
    z-index: var(--zIndices-hide);

    width: 100%;
    height: 180px;

    transform: rotateX(180deg);

    background: var(--colors-tiffany-blue);
    -webkit-mask-image: url("assets/wave-headline-01.svg");
  }

  /* Diagonal background effect */
  .diagonal-effect {
    position: relative;
    isolation: isolate;
  }
  .diagonal-effect::after {
    content: "";

    position: absolute;
    inset: 0;
    z-index: var(--zIndices-hide);

    background: var(--colors-tiffany-blue);

    transform: skewY(-4deg);
  }

  /* Highlight animation */
  .text-highlight {
    background: linear-gradient(
      to right,
      white,
      white 50%,
      var(--colors-gunmetal) 50%
    );
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 200% 100%;
    background-position: 100%;

    animation: 4s ease-in-out 1s infinite normal none running highlighting;
  }
  @keyframes highlighting {
    from {
      background-position: 100%;
    }
    50% {
      background-position: 0% 100%;
    }
    to {
      background-position: 0% 100%;
    }
  }
</style>
