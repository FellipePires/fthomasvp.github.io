---
import "animate.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="developer, frontend, front-end, react" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style lang="scss" is:global>
  @import "../styles/base.scss";

  *,
  *::before,
  *::after {
    box-sizing: border-box;

    scroll-behavior: smooth;

    margin: 0;
    padding: 0;

    word-wrap: break-word;
  }

  body {
    color: $colors-black-rich;
    font-family: $fontfamily-poppins;
    font-size: $fontsizes-md;
    line-height: $lineheights-base;

    background-color: #fff;
  }

  section,
  footer {
    /* `block` represents "top" and "bottom" */
    padding-block: $space-16;
  }

  h1 {
    font-size: $fontsizes-5xl;
    font-family: $fontfamily-bebas-neue;
  }
  h2 {
    margin-block: 0.8em;

    font-size: $fontsizes-4xl;
    font-family: $fontfamily-bebas-neue;
    letter-spacing: $letterspacings-wider;
  }
  h3 {
    margin-block: 0.6em;

    font-weight: $fontweights-medium;
    font-size: $fontsizes-3xl;
    font-family: $fontfamily-bebas-neue;
    letter-spacing: $letterspacings-widest;
  }
  h4 {
    margin-block: 0.4em;

    font-family: $fontfamily-bebas-neue;
  }
  h5 {
    margin-block: 0.2em;

    font-family: $fontfamily-bebas-neue;
  }
  h6 {
    margin-block: 0.1em;

    font-family: $fontfamily-bebas-neue;
  }

  @media (min-width: 30em) {
    body {
      font-size: $fontsizes-lg;
    }
  }

  .d-flex {
    display: flex;
  }
  .flex-1 {
    flex: 1;
  }
  .flex-direction-column {
    flex-direction: column;
  }
  .flex-direction-row {
    flex-direction: row;
  }
  .flex-wrap {
    flex-wrap: wrap;
  }
  .justify-center {
    justify-content: center;
  }
  .align-center {
    align-items: center;
  }

  .d-grid {
    display: grid;
  }

  .text-center {
    text-align: center;
  }

  .wrapper {
    max-width: 60em;

    margin-inline: auto;
    /* `inline` represents "left" and "right" */
    padding-inline: $space-5;
  }

  /* Wave background effect */
  .wave-effect {
    position: relative;

    &::after {
      content: "";

      position: absolute;
      bottom: 0;
      z-index: $zIndices-hide;

      width: 100%;
      height: 180px;

      transform: rotateX(180deg);

      background: $colors-gold;
      -webkit-mask-image: url("assets/wave-headline-01.svg");
    }
  }

  /* Diagonal background effect */
  .diagonal-effect {
    position: relative;
    isolation: isolate;

    &::after {
      content: "";

      position: absolute;
      inset: 0;
      z-index: $zIndices-hide;

      background: $colors-gold;

      transform: skewY(-4deg);
    }
  }

  /* Highlight animation */
  .text-highlight {
    background: linear-gradient(
      to right,
      white,
      white 50%,
      $colors-gunmetal 50%
    );
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 200% 100%;
    background-position: 100%;

    animation: 4s ease-in-out 1s infinite normal none running highlighting;
  }
  @keyframes highlighting {
    from {
      background-position: 100%;
    }
    50% {
      background-position: 0% 100%;
    }
    to {
      background-position: 0% 100%;
    }
  }
</style>
